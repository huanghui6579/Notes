<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yunxinlink.notes.ui.settings.AboutActivity">

    <include
        layout="@layout/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_height="@dimen/activity_vertical_margin"
                style="@style/SpaceStyle"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_horizontal_margin">
                <ImageView
                    android:id="@id/iv_icon"
                    android:layout_width="@dimen/list_item_height_middle"
                    android:layout_height="@dimen/list_item_height_middle"
                    android:src="@mipmap/ic_launcher"
                    android:contentDescription="@null"/>

                <TextView
                    android:id="@id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceListItem"
                    android:layout_toRightOf="@id/iv_icon"
                    android:layout_toEndOf="@id/iv_icon"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_alignParentTop="@id/iv_icon"
                    android:textSize="@dimen/text_display_middle"
                    android:text="@string/app_name"/>

                <TextView
                    android:id="@+id/tv_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="?android:attr/textColorSecondary"
                    android:layout_toRightOf="@id/iv_icon"
                    android:layout_toEndOf="@id/iv_icon"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_alignBottom="@id/iv_icon"
                    android:text="版本：1.0"/>
            </RelativeLayout>

            <View
                android:layout_height="@dimen/activity_vertical_margin"
                style="@style/SpaceStyle"/>

            <TextView
                android:id="@+id/tv_check_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/list_item_height_small"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:clickable="true"
                style="?android:attr/textAppearanceListItem"
                android:text="@string/about_check_version"
                android:background="@drawable/common_background_selector"/>

            <View
                style="@style/DividerStyle"/>

            <TextView
                android:id="@+id/tv_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/list_item_height_small"
                android:gravity="center_vertical"
                android:clickable="true"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                style="?android:attr/textAppearanceListItem"
                android:text="@string/about_share"
                android:background="@drawable/common_background_selector"/>

            <View
                style="@style/DividerStyle"/>

            <TextView
                android:id="@+id/tv_website"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/list_item_height_small"
                android:gravity="center_vertical"
                android:clickable="true"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                style="?android:attr/textAppearanceListItem"
                android:text="@string/about_url"
                android:background="@drawable/common_background_selector"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
