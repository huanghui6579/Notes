<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tool_container"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <ImageButton
        android:id="@+id/iv_undo"
        style="@style/EditBottomToolBarStyle"
        android:src="@drawable/ic_content_undo"/>

    <ImageButton
        android:id="@+id/iv_redo"
        style="@style/EditBottomToolBarStyle"
        android:src="@drawable/ic_content_redo"/>

    <ImageButton
        android:id="@+id/iv_list"
        style="@style/EditBottomToolBarStyle"
        android:src="@drawable/ic_content_list"/>

    <ImageButton
        android:id="@+id/iv_time"
        style="@style/EditBottomToolBarStyle"
        android:src="@drawable/ic_content_time"
        android:tint="@color/tint_color_gray"/>

    <ImageButton
        android:id="@+id/iv_contact"
        style="@style/EditBottomToolBarStyle"
        android:src="@drawable/ic_content_person_add"
        android:tint="@color/tint_color_gray"/>

    <ImageButton
        android:id="@+id/iv_down"
        style="@style/EditBottomToolBarStyle"
        android:src="@drawable/ic_content_arrow_down"
        android:tint="@color/tint_color_gray"/>

</LinearLayout>
