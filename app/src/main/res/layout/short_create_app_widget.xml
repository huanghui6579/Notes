<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/AppWidgetContainerStyle">
    
    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/icon_size_small"
        android:background="@drawable/bg_widget_header"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/widget_item_margin_left"
        android:paddingEnd="@dimen/widget_item_margin_left">
        <ImageView
            android:id="@+id/btn_settings"
            android:layout_width="@dimen/widget_item_settings_icon_size"
            android:layout_height="@dimen/widget_item_settings_icon_size"
            android:scaleType="centerInside"
            android:tint="@android:color/white"
            android:src="@drawable/ic_settings"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/common_background_borderless_selector"
            android:layout_marginLeft="@dimen/widget_margin"
            android:layout_marginStart="@dimen/widget_margin"/>
        <TextView
            android:id="@+id/tv_header_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="@dimen/widget_header_name_size"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical"
            android:layout_toLeftOf="@id/btn_settings"
            android:layout_toStartOf="@id/btn_settings"
            android:layout_centerVertical="true"
            android:text="@string/default_archive_widget"/>
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_layout"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:background="@drawable/bg_widget_bottom">
        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="@dimen/notification_icon_size"
            android:layout_height="@dimen/notification_icon_size"
            android:scaleType="centerInside"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/common_background_borderless_selector"
            android:clickable="true"
            android:focusable="true"
            android:src="@mipmap/ic_launcher"/>
        
        <LinearLayout
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_logo"
            android:layout_toEndOf="@id/iv_logo"
            android:layout_marginLeft="@dimen/widget_item_margin_left"
            android:layout_marginStart="@dimen/widget_item_margin_left"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/item_1"
                style="@style/WidgetItemStyle"
                android:layout_weight="1"
                android:src="@drawable/ic_note_add"/>
            <ImageView
                android:id="@+id/item_2"
                style="@style/WidgetItemStyle"
                android:layout_weight="1"
                android:src="@drawable/ic_action_camera"/>
            <ImageView
                android:id="@+id/item_3"
                style="@style/WidgetItemStyle"
                android:layout_weight="1"
                android:src="@drawable/ic_action_voice"/>
            <ImageView
                android:id="@+id/item_4"
                style="@style/WidgetItemStyle"
                android:layout_weight="1"
                android:src="@drawable/ic_action_brush"/>
            <ImageView
                android:id="@+id/item_5"
                style="@style/WidgetItemStyle"
                android:layout_weight="1"
                android:src="@drawable/ic_action_insert_file"/>
        </LinearLayout>

        
    </RelativeLayout>

</RelativeLayout>