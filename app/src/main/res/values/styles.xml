<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:preferenceStyle">@style/NotePreferenceStyle</item>
        <item name="android:preferenceCategoryStyle">@style/NotePreferenceStyle.Category</item>
        <item name="android:preferenceInformationStyle">@style/NotePreferenceStyle.Information</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/AppTheme.ActionMode</item>
        <item name="alertDialogTheme">@style/NoteAlertDialogStyle</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.NoActionBar.Default">
        
    </style>

    <style name="AppTheme.NoActionBar.Default.Main">
        <item name="android:windowIsTranslucent">false</item>
    </style>
    
    <style name="AppTheme.NoActionBar.Dark">
        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryNightDark</item>
    </style>
    
    <style name="AppTheme.NoActionBar.Dark.Default">
        
    </style>

    <style name="AppTheme.ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="background">?attr/colorPrimary</item>
        <item name="backgroundSplit">@android:color/white</item>
    </style>    

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.AppBarOverlay.Light" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="AppTheme.PopupOverlay.Dark" parent="ThemeOverlay.AppCompat.Dark"/>
    
    
    <style name="NavMenuStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:background">@drawable/common_background_borderless_selector</item>
    </style>
    
    <style name="EditBottomToolBarStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/common_background_borderless_selector</item>
        <item name="android:padding">@dimen/bottom_tool_bar_padding</item>
    </style>
    
    <style name="CommonBtnStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/common_btn_background_selector</item>
    </style>
    
    <style name="ListItemCheckboxStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:background">@null</item>
    </style>

    <style name="SwipeBackLayout">
        <item name="edge_size">50dip</item>
        <item name="shadow_left">@drawable/shadow_left</item>
        <item name="shadow_right">@drawable/shadow_right</item>
        <item name="shadow_bottom">@drawable/shadow_bottom</item>
    </style>

    <style name="StokeRadioStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginRight">@dimen/content_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="StokeRadioStyle.Type">
        <item name="android:minWidth">@dimen/horizontal_space_large</item>
        <item name="android:minHeight">@dimen/horizontal_space_large</item>
    </style>

    <style name="NoteAlertDialogStyle" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="buttonBarPositiveButtonStyle">@style/NoteButtonBarButtonStyle</item>-->
        <item name="buttonBarNegativeButtonStyle">@style/NoteButtonBarNegativeButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/NoteButtonBarNegativeButtonStyle</item>
        <!--<item name="android:textColor">@color/colorPrimary</item>-->
        <!-- Used for the title and text -->
        <!--<item name="android:textColorPrimary">#FFFFFF</item>-->
        <!-- Used for the background -->
        <!--<item name="android:background">#4CAF50</item>-->
    </style>

    <style name="NoteButtonBarButtonStyle" parent="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="NoteButtonBarNegativeButtonStyle" parent="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/text_content_color</item>
    </style>
    
    <style name="NotePreferenceStyle">
        <item name="android:layout">@layout/item_preference</item>
    </style>
    
    <style name="NotePreferenceStyle.Category">
        <item name="android:layout">@layout/layout_preference_category</item>
        <!-- The title should not dim if the category is disabled, instead only the preference children should dim. -->
        <item name="android:shouldDisableView">false</item>
        <item name="android:selectable">false</item>
    </style>
    
    <style name="NotePreferenceStyle.Information">
        <item name="android:layout">@layout/layout_preference_information</item>
        <item name="android:enabled">false</item>
        <item name="android:shouldDisableView">false</item>
    </style>

    <style name="TextTipBtnStyle">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textColor">@color/text_grey_color</item>
    </style>
    
    <style name="TextAppearance.AppCompat.Notification" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/switch_thumb_disabled_material_light</item>
        <item name="android:textSize">@dimen/abc_text_size_caption_material</item>
    </style>

    <style name="TextAppearance.AppCompat.Notification.Title">
        <item name="android:textColor">@color/primary_text_default_material_light</item>
        <item name="android:textSize">@dimen/abc_text_size_body_1_material</item>
    </style>
    
    <style name="WidgetItemStyle">
        <item name="android:layout_width">@dimen/icon_size_middle</item>
        <item name="android:layout_height">@dimen/icon_size_middle</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:tint">@android:color/white</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/common_background_borderless_selector</item>
    </style>
    
    <style name="AppWidgetContainerStyle">
        <item name="android:paddingLeft">@dimen/widget_margin</item>
        <item name="android:paddingRight">@dimen/widget_margin</item>
        <item name="android:paddingTop">@dimen/widget_margin_vertical</item>
        <item name="android:paddingBottom">@dimen/widget_margin_vertical</item>
    </style>
</resources>
