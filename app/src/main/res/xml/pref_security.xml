<android.support.v7.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    
    <android.support.v7.preference.SwitchPreferenceCompat
        android:key="@string/settings_key_security_password"
        android:title="@string/settings_security_type_title"
        android:summary="@string/settings_security_type_summary"
        android:defaultValue="false"
        android:checked="false"/>
    
    <android.support.v7.preference.Preference 
        android:key="@string/settings_key_security_modify_password"
        android:title="@string/settings_security_pwd_modify"
        android:dependency="security_password"/>

    <android.support.v7.preference.SwitchPreferenceCompat
        android:key="@string/settings_key_security_show_widget"
        android:title="@string/settings_security_widget_title"
        android:summary="@string/settings_security_widget_summary"
        android:dependency="security_password"
        android:defaultValue="false"
        android:checked="false"/>
    
